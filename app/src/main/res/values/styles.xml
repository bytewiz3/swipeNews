<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        //hide action bar
        <!--        <item name="android:textViewStyle">@style/NormalText</item>-->  //override app
        text theme
    </style>

    <style name="AppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
